<main style="margin-left: 3px;">
   <h1 class="Todopage-title">My To-do List</h1>
   <form action="/todos" method="POST" class="Add-Todo">
      <input class="AddTodo-txt" type="text" placeholder="What's next?" name="todo_text">
      <input class="AddTodo-date" type="date" name="due_date">
      <button class="AddTodo-button" type="submit">Add</button>
   </form>         

   <%= render partial: "todos-section", locals: {
      section_title: "Overdue",
      todos: Todo.overdue.where(completed: false),
      show_due_date: true 
      } %> 
   <%= render partial: "todos-section", locals: {
      section_title: "Due Today",
      todos: Todo.duetoday,
      show_due_date: false
      } %> 
   <%= render partial: "todos-section", locals: {
      section_title: "Due Later",
      todos: Todo.duelater,
      show_due_date: true
      } %> 

</main>